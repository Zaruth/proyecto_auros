{% extends 'base.html.twig' %}

{% block title %}Mensaje{% endblock %}

{% block body %}
    <h1>Mensaje</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Fecha</th>
                <td>{{ message.date ? message.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Texto</th>
                <td>{{ message.text|raw }}</td>
            </tr>
            <tr>
                <th>Reportado</th>
                <td>{{ message.reported ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}