{% extends 'base.html.twig' %}

{% block title %}Nuevo Tema{% endblock %}

{% block body %}
    <h1>Nuevo Tema</h1>
    
    {{ form_start(form) }}
    <table align="center">
        <tr>
            <td align="right">
                {{ form_label(form.title) }}
            </td>
            <td>
                {{ form_widget(form.title) }}
            </td>
        </tr>
        <tr>
            <td align="right">
                {{ form_label(form.category) }}
            </td>
            <td>
                {{ form_widget(form.category) }}
            </td>
        </tr>
        <tr>
            <td align="right">
                Mensaje: 
            </td>
            <td>
                <textarea class="form-control" name="mensaje" placeholder="Mensaje" required="required"></textarea>
            </td>
        </tr>
        <tr>
            <td colspan="2" align="center">
                <button class="btn btn-warning" type="submit">Crear</button>
            </td>
        </tr>
    </table>
    {{ form_end(form) }}
{% endblock %}